    <section class="blog-area space-top space-extra-bottom">
        <div class="container">
            <div class="row">
                <div class="col-xxl-8 col-lg-7">
                    <% data.forEach(post => { %>                          
                    <div class="blog-card style4">
                        <div class="blog-img">
                            <% if(post.img.length > 5) {%>
                            <img src="<%= post.img%>"  style="width: 641px;height: 330px;" alt="blog image">
                            <% } else { %>
                                <img src="img/blog/blog_s1_1.png" alt="blog image">   
                            <%}%>
                        </div>
                        <div class="blog-content">
                            <div class="blog-meta">
                                <a href="/post/<%= post._id %>"><i class="far fa-clock"></i><%= moment(post.createdAt).format('Do MMMM dddd, YYYY, h:mm a') %></a>
                                <a href="/post/<%= post._id %>"><i class="far fa-user"></i>Ekleyen: Admin</a>
                            </div>
                            <h3 class="blog-title"><a href="/post/<%= post._id %>"><%= post.title %></a></h3>
                            <p><%= post.aciklama %><a href="/post/<%= post._id %>">...</a></p>
                            <a href="/post/<%= post._id %>" class="link-btn style2"><i class="fas fa-arrow-right"></i> Devamını Oku</a>
                        </div>
                    </div>
                    <% }) %>  
                    <div class="pagination">
                        <ul>
                            <% if (current > 1) { %>
                                <li><a href="/blog?page=<%= current-1 %>"><i class="fas fa-arrow-left"></i></a></li>
                            <% } %>
                            <% if (nextPage !== null) { %>
                                <li><a href="/blog?page=<%= nextPage %>"><%= nextPage %></a></li>
                                <li><a href="/blog?page=<%= nextPage %>"><i class="fas fa-arrow-right"></i></a></li>
                            <% } %>
                            
                        </ul>
                    </div>
                </div>

                <div class="col-xxl-4 col-lg-5">
                    <aside class="sidebar-area">

                        <div class="widget">
                            <h3 class="widget_title">Geçmiş Yazılarımız</h3>
                            <div class="recent-post-wrap">
                                <% data.forEach(post => { %>                          
                                    <div class="recent-post">
                                        <div class="media-img">
                                            <% if(post.img.length > 5) {%>
                                                <a href="/post/<%= post._id %>"><img src="<%=post.img%>" alt="Blog Image"></a>
                                           
                                                <% } else { %>
                                            <a href="/post/<%= post._id %>"><img src="img/blog/recent-post1.png" alt="Blog Image"></a>
                                            <%}%>
                                        </div>
                                        <div class="media-body">
                                            <h4 class="post-title"><a class="text-inherit" href="/post/<%= post._id %>"><%= post.title %></a></h4>
                                            <div class="recent-post-meta">
                                                <a href="/post/<%= post._id %>"><%= moment(post.createdAt).format('Do MMMM dddd, YYYY, h:mm a') %></a>
                                            </div>
                                        </div>
                                    </div>
                                          
                                
                                    <% }) %>  
                            </div>
                        </div>
                        <div class="widget widget_gallery">
                            <h3 class="widget_title">Galeri</h3>
                            <div class="insta-feed">
                                <% data.forEach(post => { %>   
                                    <% if(post.img.length > 5) {%>  
                                <a href="/post/<%= post._id %>"><img src="<%= post.img %>" alt="img">
                                    <% } else { %>
                                        <a href="/post/<%= post._id %>l"><img src="img/widget/widget1-1.png" alt="img">
                                        <%}%>
                                <i class="fab fa-click"></i></a>
                            <% })%>
                            </div>
                        </div>
                    </aside>
                </div>
            </div>
        </div>
    </section>   
